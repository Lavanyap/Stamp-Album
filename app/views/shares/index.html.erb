<h4>Please select the user that you want to share the album to</h4>
<div class="col-md-4">
<div class="input-group input-group-lg">
<%= form_for :share, :url => shares_path,
                           :method => 'POST',
                           :html =>{:multipart => true},
                           :role => :form do |f| %>


<%= f.select :shared_to, @user.map {|r| [r.username,r.id] } %>
<%= f.hidden_field :user_id, :value => current_user.id %>
<%= f.hidden_field :album_id, :value => @album %>

<%= f.submit "Share", :class => "btn btn-primary pull-right" %>
  <% end %>
  </div>   
  </div>   
   </form>  