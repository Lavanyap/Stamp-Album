<div class="col-md-4">
<div class="input-group input-group-lg">
<%= form_for :album, :url => albums_path,
                           :method => 'POST',
                           :html =>{:multipart => true},
                           :role => :form do |f| %>
<div class="form-group">
  
    <%= f.text_field :album_name, :placeholder => "Album_name" %>
     <%= f.hidden_field :user_id, :value => current_user.id %>
   </div>

  <div class="form-group">
    <%= f.label :image, "Select a Image :", :style =>"float:left" %>
    <br>
    <%= f.file_field :image, :style => "float:left" %>
  </div>    
<br>


     

  <%= f.submit "Add Album", :class => "btn btn-primary pull-right" %>
  <% end %>
  </div>   
  </div>   
   </form>