<!DOCTYPE html>
<html>
<head>
  <title>Stamp album</title>
    
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
 
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
 
  <%= csrf_meta_tags %>
</head>
<body>
  <% if user_signed_in? %>
  <% if not @messages_rendered -%>
  <% if flash[:error] -%>
    <p class='error'><%=h flash[:error] %></p>
  <% end -%>
  <% if flash[:notice] -%>
    <p class='notice'><%=h flash[:notice] %></p>
  <% end -%>
  <% if flash[:success] -%>
    <p class='success'><%=h flash[:success] %></p>
  <% end -%>
<% end -%>
<% @messages_rendered = true -%>
<div id ="user_nav">
	



<nav role="navigation" class="navbar navbar-default">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
        <button type="button" data-target="#navbarCollapse" data-toggle="collapse" class="navbar-toggle">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
        </button>
        
    </div>
    <!-- Collection of nav links and other content for toggling -->
    <div id="navbarCollapse" class="collapse navbar-collapse">
        <ul class="nav navbar-nav">
          <li><%= link_to "My Albums", albums_path %></li>

         <li><a href="/shares/albums_shared_by_user">Albums shared by you</a></li>
         <li><a href="/shares/albums_shared_to_user">Albums shared with you</a></li>

          

           <li><%= link_to "Stamps by Country", :controller => "stamps" ,:action => "index",:id =>(1) %></li>
            <li><%= link_to "Stamps by Category", :controller => "stamps" ,:action => "index",:id =>(2) %></li>
            
             <li><%= link_to "Countries", :controller => "countries" ,:action => "index" %></li>
             <% if (current_user.admin == true) %> 
             <li><%= link_to "Categories", :controller => "categories" ,:action => "index" %></li>
             <li><%= link_to "Admin Users", :controller => "users" ,:action => "index" %></li>
             <% end %>
        </ul>

        <ul class="nav navbar-nav navbar-right">

            <li><%= link_to "Sign Out", destroy_user_session_path,:method => :delete %></li>
        </ul>
    </div>
</nav>
<% end %>
</div>

 <%= yield %>
</body>
</html>


